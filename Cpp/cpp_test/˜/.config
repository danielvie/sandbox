



[alias]
	ci   = commit
	co   = checkout
	coo  = checkout -
	com  = checkout master
	ref  = log --reflog --oneline
	fe   = fetch
	last = log -1 HEAD --stat
	sf   = show --name-only
	undo = reset HEAD~1 --mixed

	del  = branch -D # delete branch
	br   = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
	gr   = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	gr2  = log --color --graph --all --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
	tree = ls-tree -r master --name-only
	st   = status
	rem  = remote -v

	stal  = stash list
	staa  = stash apply
	stad  = stash drop
	stapo = stash pop
	stapu = stash push

	res     = reset --hard
	changed = whatchanged -n 1
	changes = whatchanged -n 1
	delta   = diff --name-status
	root = rev-parse --show-toplevel